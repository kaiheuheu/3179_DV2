{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Horizontal lollipop chart of top 10 industries by CO2 emissions in 2018.",
  "width": 350,
  "height": 290,
  "title": {
    "text": "Australia’s Top CO2-Emitting Industries",
    "fontWeight": "bold"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/kaiheuheu/3179_DV2/refs/heads/main/data/04_CO2_Emissions_Emissions_Intensities_and_Emissions_Multipliers.csv",
    "format": { "type": "csv" }
  },
  "transform": [
    { "filter": "datum.Indicator == 'CO2 emissions'" },
    { "calculate": "toNumber(datum['2018'])", "as": "Emissions2018" },
    { "calculate": "'2018'", "as": "Year" },
    {
      "window": [{ "op": "rank", "as": "rank" }],
      "sort": [{ "field": "Emissions2018", "order": "descending" }]
    },
    { "filter": "datum.rank <= 10" }
  ],
  "layer": [
    {
      "mark": {
        "type": "rule",
        "strokeWidth": 2,
        "color": "#e25822"
      },
      "encoding": {
        "y": {
          "field": "Industry",
          "type": "ordinal",
          "sort": { "field": "Emissions2018", "order": "descending" },
          "title": "Industry"
        },
        "x": {
          "field": "Emissions2018",
          "type": "quantitative",
          "scale": { "domain": [0, 200] }
        },
        "x2": { "value": 0 },
        "tooltip": [
          { "field": "Industry", "type": "nominal" },
          { "field": "Year", "type": "nominal" },
          {
            "field": "Emissions2018",
            "type": "quantitative",
            "title": "CO₂ Emissions"
          }
        ]
      }
    },
    {
      "mark": { "type": "circle", "size": 150, "color": "#e25822" },
      "encoding": {
        "y": {
          "field": "Industry",
          "type": "ordinal",
          "sort": { "field": "Emissions2018", "order": "descending" }
        },
        "x": {
          "field": "Emissions2018",
          "type": "quantitative",
          "title": "CO₂ Emissions",
          "scale": { "domain": [0, 200] }
        },
        "tooltip": [
          { "field": "Industry", "type": "nominal" },
          { "field": "Year", "type": "nominal" },
          {
            "field": "Emissions2018",
            "type": "quantitative",
            "title": "CO₂ Emissions"
          }
        ]
      }
    }
  ]
}
