{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1200,
  "height": 825,
  "projection": { "type": "mercator" },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/kaiheuheu/3179_DV2/refs/heads/main/data/ne_50m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "mark": { "type": "geoshape", "fill": "black", "stroke": "white" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/kaiheuheu/3179_DV2/refs/heads/main/data/bushfires_cleaned.csv",
        "format": {
          "type": "csv",
          "parse": {
            "longitude": "number",
            "latitude": "number",
            "bright_ti4": "number"
          }
        }
      },
      "mark": {
        "type": "circle",
        "opacity": 0.5
      },
      "encoding": {
        "longitude": { "field": "longitude", "type": "quantitative" },
        "latitude": { "field": "latitude", "type": "quantitative" },
        "size": { "value": 5 },
        "color": {
          "field": "bright_ti4",
          "type": "quantitative",
          "title": "Brightness",
          "scale": {
            "scheme": "reds",
            "reverse": true
          },
          "legend": null
        },
        "tooltip": [
          {
            "field": "longitude",
            "type": "quantitative",
            "title": "Longitude",
            "format": ".3f"
          },
          {
            "field": "latitude",
            "type": "quantitative",
            "title": "Latitude",
            "format": ".3f"
          },
          {
            "field": "bright_ti4",
            "type": "quantitative",
            "title": "Brightness",
            "format": ".3g"
          }
        ]
      }
    }
  ]
}
