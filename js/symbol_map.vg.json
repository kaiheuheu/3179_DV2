{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 700,

  "background": "transparent",
  "config": {
    "view": { "stroke": "transparent" }
  },

  "title": {
    "text": "Fire Intensity Hotspots Across Australia",
    "fontSize": 18,
    "fontWeight": "bold"
  },

  "projection": { "type": "mercator" },

  "params": [
    {
      "name": "brightness_min",
      "value": 200,
      "bind": {
        "input": "range",
        "min": 200,
        "max": 365,
        "step": 1,
        "name": "Minimum Brightness: "
      }
    }
  ],

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/kaiheuheu/3179_HW10/refs/heads/main/data/ne_50m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "black",
        "stroke": "transparent"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/kaiheuheu/3179_DV2/refs/heads/main/data/fireDataCleaned.csv",
        "format": {
          "type": "csv",
          "parse": {
            "longitude": "number",
            "latitude": "number",
            "bright_ti4": "number"
          }
        }
      },
      "transform": [{ "filter": "datum.bright_ti4 >= brightness_min" }],
      "mark": { "type": "circle", "opacity": 0.7 },
      "encoding": {
        "longitude": { "field": "longitude", "type": "quantitative" },
        "latitude": { "field": "latitude", "type": "quantitative" },
        "size": { "value": 5 },
        "color": {
          "field": "bright_ti4",
          "type": "quantitative",
          "title": "Brightness",
          "scale": { "domain": [200, 375], "scheme": "reds", "reverse": true }
        },
        "tooltip": [
          {
            "field": "longitude",
            "type": "quantitative",
            "title": "Longitude",
            "format": ".3f"
          },
          {
            "field": "latitude",
            "type": "quantitative",
            "title": "Latitude",
            "format": ".3f"
          },
          {
            "field": "bright_ti4",
            "type": "quantitative",
            "title": "Brightness",
            "format": ".3g"
          }
        ]
      }
    }
  ]
}
